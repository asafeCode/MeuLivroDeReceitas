<?xml version="1.0" encoding="utf-8"?>
<RunSettings>
    <DataCollectionRunSettings>
        <DataCollectors>
            <DataCollector friendlyName="Code Coverage">
                <Configuration>
                    <!-- Formato de saída -->
                    <Format>cobertura</Format>

                    <!-- Filtros para incluir/excluir código -->
                    <ExcludeByAttribute>
                        <Attribute>GeneratedCodeAttribute</Attribute>
                        <Attribute>CompilerGeneratedAttribute</Attribute>
                    </ExcludeByAttribute>

                    <Exclude>
                        <!-- Excluir arquivos de teste -->
                        <ModulePath>.*Tests.dll</ModulePath>
                        <ModulePath>.*TestProject.dll</ModulePath>
                        <ModulePath>.*xunit.*</ModulePath>
                    </Exclude>
                </Configuration>
            </DataCollector>
        </DataCollectors>
    </DataCollectionRunSettings>
</RunSettings>
